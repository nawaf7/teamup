<!DOCTYPE html>
<html lang="en-US">

  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign up</title>
  </head>

  <body>

          <%= devise_error_messages! %>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
          <div class="row">

            <!-- FULL NAME -->
            <div class="form-group">
              <div class="text-field">
                <%= f.text_field :firstname, class:"", placeholder: "First name" %>
              </div>
            </div>

            <br/>

            <!-- EMAIL -->
            <div class="form-group">
              <div class="text-field">
                <%= f.email_field :email, placeholder: "Email address", class: "" %>
              </div>
            </div>

            <br/>

            <!-- PASSWORD -->
            <div class="form-group">
              <div class="text-field">
                <%= f.password_field :password, placeholder: "Password - 6 characters minimum", class: "" %>
              </div>
            </div>

            <br/>

            <!-- PASSWORD CONFIRMATION -->
            <div class="form-group">
              <div class="text-field">
                <%= f.password_field :password_confirmation, placeholder: "Password confirmation", class: "" %>
              </div>
            </div>
              
              <!-- SUBMIT -->
              <div class="form-group">
                <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn button-background-color" %>
              </div>

              <div class="form-group">
                <%= render "devise/shared/links" %>
              </div>

            </div>
          <% end %>
  </body>

</html>

